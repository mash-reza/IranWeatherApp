<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/chooseFragmentWeatherIMageView">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.festive.iranweatherapp.ui.main.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action

            android:id="@+id/action_nav_home_to_chooseFragment"
            app:destination="@id/chooseFragmentWeatherIMageView" />
    </fragment>
    <fragment
        android:id="@+id/chooseFragmentWeatherIMageView"
        android:name="com.festive.iranweatherapp.ui.main.choose.ChooseFragment"
        android:label="@string/app_name"
        tools:layout="@layout/choose_fragment">
        <action
            android:id="@+id/action_chooseFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

</navigation>